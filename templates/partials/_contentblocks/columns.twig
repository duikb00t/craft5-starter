    <div class="container mx-auto px-4">
        <h2 class="text-3xl md:text-4xl font-extrabold text-center mb-10">{{ block.title }}</h2>

        {% if block.columns %}
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-8">
                {% for column in block.columns %}
                    <article class="flex items-start space-x-4">
                        <div>
                            <h3 class="font-semibold text-lg text-black">Kwaliteit gegarandeerd</h3>
                            <p class="text-gray-700 mt-1">
                                {{ column.body }}
                            </p>
                        </div>
                    </article>

                {% endfor %}
            </div>
        {% endif %}

