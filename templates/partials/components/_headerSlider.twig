{% if entry is defined and entry.heroSlider is not empty %}
    {% set slides = entry.heroSlider.all() %}
    {% set slideCount = slides|length %}
    {% if slideCount > 0 %}
        <div class="glider-contain" style="height: 80vh;">
            <div class="glider">
                {% for slide in slides %}
                    <div class="glider-slide">
                        {% set image = slide.sliderImage.one() %}
                        {% if image %}
                            <img src="{{ image.url }}" alt="{{ slide.sliderHeading|default('Slide image') }}" loading="lazy">
                        {% endif %}
                        {% if slide.sliderHeading %}
                            <h2>{{ slide.sliderHeading }}</h2>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>

            {# Navigation and dots shown only if more than one slide #}
            {% if slideCount > 1 %}
                <div class="glider-dots"></div>
                {# Uncomment these if you want nav arrows too #}
                {# <button class="glider-prev">«</button>
                <button class="glider-next">»</button> #}
            {% endif %}
        </div>
    {% endif %}
{% else %}
    {# Optional fallback #}
    {# <p>No slider content available.</p> #}
{% endif %}
